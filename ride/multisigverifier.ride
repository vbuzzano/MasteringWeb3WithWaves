{-# STDLIB_VERSION 3 #-}
{-# CONTENT_TYPE DAPP #-}
{-# SCRIPT_TYPE ACCOUNT #-}

@Verifier(tx)
func verify() = {
    match(tx) {
        case d:DataTransaction => true
        case s:SetScriptTransaction =>
            sigVerify(tx.bodyBytes, tx.proofs[0], tx.
            senderPublicKey)
        }
        case _ => false
    }
}